{
  "name": "Gooey",
  "description": "An RSS Reader.",
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "worker": {
      "quantity": 1,
      "size": "standard-1x"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ],
  "environments": {
    "review": {
      "scripts": {
        "postdeploy": "bundle exec rake db:schema:load db:seed"
      },
      "addons": ["heroku-redis:hobby-dev"]
    }
  }
}
